{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fastcull",
  "version": "0.1.0",
  "identifier": "com.fastcull.desktop",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "fastcull",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "dmg",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
